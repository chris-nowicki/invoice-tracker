---
import Layout from "../layouts/Layout.astro";
import App from "../components/react/App";
---

<Layout title="Invoice Tracker">
  <div class="flex flex-col items-center w-full max-w-4xl mx-auto px-6 pb-20">
    <header class="w-full pt-16 pb-10">
      <h1 class="font-serif italic text-5xl text-stone-100 tracking-tight">
        Invoices
      </h1>
      <p class="mt-2 text-sm text-stone-500 tracking-wide">
        Track, send, and manage
        <span class="text-stone-500/60">&mdash;</span>
        <a
          href="https://www.resend.com"
          class="text-stone-500 hover:text-stone-300 transition-colors"
          >powered by Resend</a
        >
      </p>
    </header>
    <App client:load />
  </div>
</Layout>
